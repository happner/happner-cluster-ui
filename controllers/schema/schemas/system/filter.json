{
  "title":"filter",
  "properties":{
    "name": {
      "id": "/properties/name",
      "type": "string"
    },
    "number": {
      "id": "/properties/number",
      "type": "integer"
    },
    "organisation": {
      "id": "/properties/organisation",
      "type": "integer"
    },
    "deleted": {
      "id": "/properties/deleted",
      "type":"string",
      "format":"datetime-local",
      "readOnly":true
    },
    "_meta": {
      "id": "/properties/_meta",
      "properties": {
        "created": {
          "id": "/properties/_meta/properties/created",
          "type":"string",
          "format":"datetime-local",
          "readOnly":true
        },
        "createdBy": {
          "id": "/properties/_meta/properties/createdBy",
          "type": "string"
        },
        "modified": {
          "id": "/properties/_meta/properties/modified",
          "type":"string",
          "format":"datetime-local",
          "readOnly":true
        }
      },
      "type": "object"
    },
    "criteria":{
      "$ref":"./schemas/system/form-fields.json"
    },
    "options":{
      "id": "/properties/options",
      "type":"object",
      "properties":{
        "runImmediate":{
          "id": "/properties/options/properties/runImmediate",
          "type":"object",
          "properties":{
            "activated":{
              "type":"boolean",
              "default":false
            }
          }
        },
        "runOnChange":{
          "id": "/properties/options/properties/runOnChange",
          "type":"object",
          "properties":{
            "activated":{
              "type":"boolean",
              "default":false
            },
            "delay":{
              "id": "/properties/options/properties/runOnChange/properties/delay",
              "type":"number",
              "default":1000
            }
          }
        },
        "sort":{
          "id": "/properties/options/properties/sort",
          "type":"object",
          "properties":{
            "fields":{
              "id": "/properties/options/properties/sort/properties/fields",
              "type":"array",
              "uniqueItems": true,
              "items":{
                "id": "/properties/options/properties/sort/properties/fields/items",
                "type":"object",
                "properties":{
                  "fieldName":{
                    "id": "/properties/options/properties/sort/properties/fields/items/properties/fieldName",
                    "type":"string",
                    "required":true
                  },
                  "direction":{
                    "id": "/properties/options/properties/sort/properties/fields/items/properties/direction",
                    "type":"string",
                    "default":"ASC",
                    "enum":["ASC","DESC"]
                  }
                }
              }
            }
          }
        },
        "limit":{
          "id": "/properties/options/properties/limit",
          "type":"number",
          "default":20
        }
      }
    }
  }
}
